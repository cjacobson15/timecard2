<!-- Validation failure messages -->
<% if @admin.errors.any? %>
  <% @admin.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Admin #<%= @admin.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_admin/<%= @admin.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for full_access -->
      <div class="checkbox">
        <label for="full_access">
          <input type="checkbox" id="full_access" name="full_access" value="1" <%= "checked" if @admin.full_access %>>
          Full access
        </label>
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @admin.user_id %>">
      </div>

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <input type="text" id="company_id" name="company_id" placeholder="Company" class="form-control" value="<%= @admin.company_id %>">
      </div>

      <button class="btn btn-warning">
        Update Admin
      </button>
      or
      <a href="/admins/<%= @admin.id %>">Cancel</a>
    </form>
  </div>
</div>
