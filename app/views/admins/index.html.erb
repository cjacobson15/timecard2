<div class="page-header">
  <h1>
    Admins
    <a href="/admins/new" class="btn btn-lg btn-success">New Admin</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Full access</th>
        <th>User</th>
        <th>Company</th>
        <th>Actions</th>
      </tr>

      <% @admins.each do |admin| %>
      <tr>
        <td><%= admin.full_access %></td>
        <td><%= admin.user_id %></td>
        <td><%= admin.company_id %></td>
        <td>
          <a href="/admins/<%= admin.id %>" class="btn btn-primary">Show</a>
          <a href="/admins/<%= admin.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_admin/<%= admin.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
