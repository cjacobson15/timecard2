<!-- Validation failure messages -->
<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Job</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_job" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for approval -->
      <div class="checkbox">
        <label for="approval">
          <input type="checkbox" id="approval" name="approval" value="1" <%= "checked" if @job.approval %>>
          Approval
        </label>
      </div>

      <!-- Label and input for pay_rate -->
      <div class="form-group">
        <label for="pay_rate" class="control-label">
          Pay rate
        </label>

        <input type="text" id="pay_rate" name="pay_rate" placeholder="Pay rate" class="form-control" value="<%= @job.pay_rate %>">
      </div>

      <!-- Label and input for title -->
      <div class="form-group">
        <label for="title" class="control-label">
          Title
        </label>

        <input type="text" id="title" name="title" placeholder="Title" class="form-control" value="<%= @job.title %>">
      </div>

      <!-- Label and input for company_id -->
      <div class="form-group">
        <label for="company_id" class="control-label">
          Company
        </label>

        <input type="text" id="company_id" name="company_id" placeholder="Company" class="form-control" value="<%= @job.company_id %>">
      </div>

      <!-- Label and input for admin_id -->
      <div class="form-group">
        <label for="admin_id" class="control-label">
          Admin
        </label>

        <input type="text" id="admin_id" name="admin_id" placeholder="Admin" class="form-control" value="<%= @job.admin_id %>">
      </div>

      <!-- Label and input for user_id -->
      <div class="form-group">
        <label for="user_id" class="control-label">
          User
        </label>

        <input type="text" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @job.user_id %>">
      </div>

      <button class="btn btn-success">
        Create Job
      </button>
      or
      <a href="/jobs">Cancel</a>
    </form>
  </div>
</div>
