<% if @job.errors.any? %>
  <% @job.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1><%= @job.company.name.upcase %>: <%= current_user.first_name.capitalize %></h1>
      <hr>



      <form action="/clock_out_shift/<%= @open_shift.id %>" method="post">
        <!-- Hidden input for authenticity token to protect from forgery -->
        <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

        <!-- Label and input for time_out -->
        <div class="form-group">
          <input type="datetime" id="time_out" name="time_out" value="<%= Time.now.in_time_zone("Central Time (US & Canada)") %>" class="form-control">
        </div>


        <button class="btn">
          Clock Out
        </button>
      </form>




    </div>
  </div>
</div>
