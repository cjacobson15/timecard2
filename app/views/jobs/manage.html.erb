<div class="page-header">
  <h1>
    Manage Jobs
  </h1>
</div>

<a href="/jobs/new" class="btn btn-lg btn-success">Create a New Job</a>

<h2>Edit Jobs</h2>


<hr>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Employee</th>
        <th>Job Title</th>
        <th>Payrate</th>
        <th></th>
      </tr>
<% @jobs.where(admin_id: @admin_id).each do |job| %>
      <tr>
        <td><a href="/jobs/<%= job.id %>/edit"><%= job.user.first_name %> <%= job.user.last_name %></a></td>
        <td><a href="/jobs/<%= job.id %>/edit"><%= job.title %></a></td>
        <td><a href="/jobs/<%= job.id %>/edit">$<%= job.pay_rate %></a></td>
        <td>
          <a href="/delete_job/<%= job.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>




  </div>
</div>

<hr>
